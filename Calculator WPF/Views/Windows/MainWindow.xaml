    </Window.Resources>

    <Border CornerRadius="7"
            Background="#3B3936">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.05*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.55*" />
                <RowDefinition Height="0.8*" />
                <RowDefinition Height="1.2*" />
                <RowDefinition Height="0.6*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="0.1*" />
            </Grid.RowDefinitions>

            <!--#region Icon and Title -->
            <Grid Grid.Row="0"
                  Grid.Column="0"
                  Grid.ColumnSpan="5"
                  MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/Images/icon.ico"
                       Height="22"
                       Margin="3, 0, 0, 0" />

                <TextBlock Grid.Column="1"
                           Text="Calculator"
                           Margin="7, 7, 0, 0"
                           FontSize="16"
                           FontFamily="{StaticResource MontserratRegular}"
                           Foreground="LightGray" />
            </Grid>
            <!--#endregion-->

            <!--#region TitleBar buttons -->
            <Grid Grid.Row="0"
                  Grid.Column="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Style="{StaticResource TitleBarMinimizeButton}"
                        Command="{Binding MinimizeCommand}">
                    <matround:IconImage Icon="Minimize"
                                        Height="3"
                                        Foreground="{StaticResource ButtonForeground}" />

                </Button>

                <Button Grid.Column="2"
                        Style="{StaticResource TitleBarCloseButton}"
                        Command="{Binding CloseCommand}">
                    <phosbold:IconImage Icon="X"
                                        Height="10"
                                        Foreground="{StaticResource ButtonForeground}" />

                </Button>
            </Grid>
            <!--#endregion-->

            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Grid.ColumnSpan="5"
                     Background="Transparent"
                     BorderThickness="0"
                     TextAlignment="Right"
                     VerticalAlignment="Bottom"
                     IsReadOnly="True"
                     FontSize="30"
                     FontFamily="{StaticResource MontserratRegular}"
                     Foreground="Gray"
                     Text="{Binding History}" />

            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Grid.ColumnSpan="5"
                     Background="Transparent"
                     BorderThickness="0"
                     TextAlignment="Right"
                     FontSize="48"
                     FontFamily="{StaticResource MontserratRegular}"
                     VerticalAlignment="Center"
                     Foreground="LightGray"
                     IsReadOnly="True"
                     Text="{Binding Input}" />

            <Button Grid.Row="3"
                    Grid.Column="1"
                    Style="{StaticResource OtherOperationsButton}"
                    Command="{Binding SquareRootCommand}">
                <TextBlock Text="√x"
                           Margin="0,0,0,1"
                           FontFamily="{StaticResource MontserratMedium}"
                           FontSize="12" />
            </Button>

            <Button Grid.Row="3"
                    Grid.Column="2"
                    Content="x²"
                    Style="{StaticResource OtherOperationsButton}"
                    Command="{Binding SquareCommand}"
                    FontFamily="{StaticResource MontserratMedium}"
                    FontSize="14" />

            <Button Grid.Row="3"
                    Grid.Column="3"
                    Content="x³"
                    Style="{StaticResource OtherOperationsButton}"
                    Command="{Binding CubeCommand}"
                    FontFamily="{StaticResource MontserratMedium}"
                    FontSize="14" />

            <Button Grid.Row="3"
                    Grid.Column="4"
                    Content="1/x"
                    Style="{StaticResource OtherOperationsButton}"
                    Command="{Binding OneDivXCommand}"
                    FontFamily="{StaticResource MontserratMedium}"
                    FontSize="13" />


            <Button Grid.Row="3"
                    Grid.Column="5"
                    Content="lg(x)"
                    Style="{StaticResource OtherOperationsButton}"
                    Command="{Binding Log10Command}"
                    FontFamily="{StaticResource MontserratMedium}"
                    FontSize="11" />


            <Button Grid.Row="8"
                    Grid.Column="4"
                    Style="{StaticResource OperationButton}"
                    Command="{Binding DotClickCommand}">
                <phos:IconImage Icon="Dot"
                                Height="10"
                                Foreground="{StaticResource ButtonForeground}" />

            </Button>

            <Button Grid.Row="8"
                    Grid.Column="3"
                    Style="{StaticResource OperationButton}"
                    Command="{Binding PercentClickCommand}">
                <phosbold:IconImage Icon="Percent"
                                    Height="20"
                                    Foreground="{StaticResource ButtonForeground}" />

            </Button>

            <Button Grid.Row="8"
                    Grid.Column="2"
                    Style="{StaticResource NumberButton}"
                    Command="{Binding NumberClickCommand}"
                    CommandParameter="0">
                <phos:IconImage Icon="NumberZero"
                                Height="30"
                                Foreground="{StaticResource ButtonForeground}" />
            </Button>

            <Button Grid.Row="8"
                    Grid.Column="1"
                    Style="{StaticResource OperationButton}"
                    Command="{Binding ChangeSignCommand}">
                <phosbold:IconImage Icon="PlusMinus"
                                    Height="20"
                                    Foreground="{StaticResource ButtonForeground}" />

            </Button>

            <Button Grid.Row="7"
                    Grid.Column="5"
                    Style="{StaticResource OperationButton}"
                    Command="{Binding OperationClickCommand}"
                    CommandParameter="+">
                <phosbold:IconImage Icon="Plus"
                                    Width="20"
                                    Foreground="{StaticResource ButtonForeground}" />
            </Button>

            <Button Grid.Row="7"
                    Grid.Column="4"
                    Style="{StaticResource OperationButton}"
                    Command="{Binding OperationClickCommand}"
                    CommandParameter="-">
                <phosbold:IconImage Icon="Minus"
                                    Width="20"
                                    Foreground="{StaticResource ButtonForeground}" />

            </Button>

            <Button Grid.Row="7"
                    Grid.Column="3"
                    Style="{StaticResource NumberButton}"
                    Command="{Binding NumberClickCommand}"
                    CommandParameter="3">
                <phos:IconImage Icon="NumberThree"
                                Height="30"
                                Foreground="{StaticResource ButtonForeground}" />

            </Button>

            <Button Grid.Row="7"
                    Grid.Column="2"
                    Style="{StaticResource NumberButton}"
                    Command="{Binding NumberClickCommand}"
                    CommandParameter="2">
                <phos:IconImage Icon="NumberTwo"
                                Height="30"
                                Foreground="{StaticResource ButtonForeground}" />

            </Button>

            <Button Grid.Row="7"
                    Grid.Column="1"
                    Style="{StaticResource NumberButton}"
                    Command="{Binding NumberClickCommand}"
                    CommandParameter="1">
                <phos:IconImage Icon="NumberOne"
                                Height="30"
                                Margin="0,0,5,0"
                                Foreground="{StaticResource ButtonForeground}" />
            </Button>

            <Button Grid.Row="6"
                    Grid.Column="5"
                    Style="{StaticResource OperationButton}"
                    Command="{Binding OperationClickCommand}"
                    CommandParameter="/">
                <phosbold:IconImage Icon="Divide"
                                    Width="20"
                                    Foreground="{StaticResource ButtonForeground}" />
            </Button>

            <Button Grid.Row="6"
                    Grid.Column="4"
                    Style="{StaticResource OperationButton}"
                    Command="{Binding OperationClickCommand}"
