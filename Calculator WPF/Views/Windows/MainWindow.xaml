<Window x:Class="Calculator_WPF.MainWindow"
        x:Name="root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:phos="clr-namespace:Calculator_WPF.Fonts.RegularPhosphor"
        xmlns:phosbold="clr-namespace:Calculator_WPF.Fonts.BoldPhosphor"
        xmlns:phosfill="clr-namespace:Calculator_WPF.Fonts.FillPhosphor"
        xmlns:mat="clr-namespace:Calculator_WPF.Fonts.RegularMaterial"
        xmlns:vm="clr-namespace:Calculator_WPF.ViewModels"
        xmlns:matround="clr-namespace:Calculator_WPF.Fonts.RegularMaterialRound"
        xmlns:local="clr-namespace:Calculator_WPF"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStartupLocation="CenterScreen"
        Height="450"
        Width="300"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <Window.Resources>

        <FontFamily x:Key="MontserratRegular">pack://application:,,,/Fonts/#Montserrat Regular</FontFamily>
        <FontFamily x:Key="MontserratMedium">pack://application:,,,/Fonts/#Montserrat Medium</FontFamily>

        <SolidColorBrush x:Key="ButtonForeground"
                         Color="White" />

        <SolidColorBrush x:Key="NumbersBackground"
                         Color="#9FA9AA" />
        <SolidColorBrush x:Key="NumbersBackgroundOver"
                         Color="#848c8d" />
        <SolidColorBrush x:Key="NumbersBackgroundPressed"
                         Color="#555a5b" />

        <SolidColorBrush x:Key="OperationsBackground"
                         Color="#889C9B" />
        <SolidColorBrush x:Key="OperationsBackgroundOver"
                         Color="#728383" />
        <SolidColorBrush x:Key="OperationsBackgroundPressed"
                         Color="#4c5757" />

        <SolidColorBrush x:Key="EqualsBackground"
                         Color="#BD2A2E" />
        <SolidColorBrush x:Key="EqualsBackgroundOver"
                         Color="#992225" />
        <SolidColorBrush x:Key="EqualsBackgroundPressed"
                         Color="#6a1719" />

        <SolidColorBrush x:Key="TitleBarCloseBackground"
                         Color="#9d9d9d" />
        <SolidColorBrush x:Key="TitleBarCloseBackgroundOver"
                         Color="#c72c30" />
        <SolidColorBrush x:Key="TitleBarCloseBackgroundPressed"
                         Color="#992225" />

        <SolidColorBrush x:Key="TitleBarMinimizeBackground"
                         Color="#9d9d9d" />
        <SolidColorBrush x:Key="TitleBarMinimizeBackgroundOver"
                         Color="#787878" />
        <SolidColorBrush x:Key="TitleBarMinimizeBackgroundPressed"
                         Color="#444444" />

        <!--#region Button style -->
        <Style x:Key="RoundButton"
               TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ButtonBase}">
                        <Border CornerRadius="25"
                                Background="{TemplateBinding Background}"
                                Name="button"
                                Width="50"
                                Height="50">
                            <Grid>
                                <Border BorderThickness="1,0,1,1"
                                        BorderBrush="Black"
                                        CornerRadius="{Binding ElementName=button, Path=CornerRadius}">
                                    <Border.Effect>
                                        <BlurEffect Radius="2"
                                                    KernelType="Gaussian" />
                                    </Border.Effect>
                                </Border>
                                <Border BorderThickness="0,1,0,0"
                                        BorderBrush="White"
                                        Margin="2"
                                        Opacity="0.7"
                                        CornerRadius="{Binding ElementName=button, Path=CornerRadius}">
                                    <Border.Effect>
                                        <BlurEffect Radius="2"
                                                    KernelType="Gaussian" />
                                    </Border.Effect>
                                </Border>
                                <ContentPresenter x:Name="test"
                                                  TextBlock.FontSize="{TemplateBinding FontSize}"
                                                  TextBlock.FontFamily="{TemplateBinding FontFamily}"
                                                  TextBlock.Foreground="{TemplateBinding Foreground}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Content="{TemplateBinding Content}"></ContentPresenter>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#848c8d" />
                            </Trigger>

                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="Black" />
                                <Setter Property="Foreground"
                                        Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Button.Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Direction="270"
                                      ShadowDepth="3"
                                      BlurRadius="15"
                                      Opacity="0.5" />
                </Setter.Value>
            </Setter>
            <Setter Property="Background"
                    Value="Gray" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="FontFamily"
                    Value="Consolas" />
        </Style>
        <!--#endregion-->

